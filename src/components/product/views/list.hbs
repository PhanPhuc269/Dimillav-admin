<section class="product-list">
    <div class="container py-5">
        <h1 class="text-center mb-4">Product List</h1>
        {{#if products.length}}
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {{#each products}}
                    <div class="col">
                        <div class="card shadow-sm h-100">
                            <img src="{{this.image}}" alt="{{this.name}}" class="card-img-top img-fluid">
                            <div class="card-body">
                                <h5 class="card-title">{{this.name}}</h5>
                                <p class="card-text text-muted">Price: <span class="fw-bold">{{this.price}}</span> VND</p>
                            </div>
                            <div class="card-footer d-flex justify-content-between">
                                <a href="/product/update/{{this.slug}}" class="btn btn-outline-primary btn-sm">Edit</a>
                                <form action="/product/delete/{{this.slug}}" method="POST" style="margin: 0;">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
            
            {{!-- Pagination Start --}}
            {{#if (gt totalPages 1)}}
                <nav class="mt-5">
                    <ul class="pagination justify-content-center">
                        {{!-- Previous Button --}}
                        <li class="page-item {{#unless (gt currentPage 1)}}disabled{{/unless}}">
                            <a class="page-link" href="?page={{sub currentPage 1}}&keyword={{keyword}}&sort={{sort}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        {{!-- Page Numbers --}}
                        {{#each (range 1 totalPages)}}
                            <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                                <a class="page-link" href="?page={{this}}&keyword={{../keyword}}&sort={{../sort}}">{{this}}</a>
                            </li>
                        {{/each}}

                        {{!-- Next Button --}}
                        <li class="page-item {{#unless (lt currentPage totalPages)}}disabled{{/unless}}">
                            <a class="page-link" href="?page={{add currentPage 1}}&keyword={{keyword}}&sort={{sort}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            {{/if}}
            {{!-- Pagination End --}}
        {{else}}
            <div class="alert alert-warning text-center mt-4">
                No products available.
            </div>
        {{/if}}
    </div>
</section>
